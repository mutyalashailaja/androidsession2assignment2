<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="com.example.admin.creditcardapp.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter card number"
        android:textColor="#FFFFFF"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ecn"
        android:inputType="text"
        android:text="                     "
        android:textSize="35sp"

        android:background="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter yearly rate of interest"
        android:id="@+id/interest"
        android:textColor="#FFFFFF"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_alignTop="@+id/interest"
        android:background="#FFFFFF"
        android:layout_marginStart="48dp"
        android:textSize="35sp"
        android:text="                     "
        android:layout_alignEnd="@+id/ecn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter minimum payment"
        android:textColor="#FFFFFF"
        android:id="@+id/payment"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:background="#FFFFFF"
        android:inputType="text"
        android:text="               "
        android:textSize="35sp"
        android:layout_alignTop="@+id/payment"
        android:layout_alignStart="@+id/editText2"
        android:layout_alignEnd="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Final card balance"
        android:textColor="#FFFFFF"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:background="#FFFFFF"
        android:text="                     "
        android:textSize="35sp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="months remaining"
        android:textColor="#FFFFFF"
        android:id="@+id/months"
        android:layout_below="@+id/editText"
        android:layout_alignEnd="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText4"
        android:background="#FFFFFF"
        android:textSize="35sp"
        android:text="                           "
        android:inputType="text"
        android:layout_below="@+id/months"
        android:layout_alignStart="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interest paid will be"
        android:id="@+id/textView3"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/editText4"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paid"
        android:background="#FFFFFF"
        android:textSize="35sp"
        android:text="             "
        android:inputType="text"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/interest" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="compute"
        android:id="@+id/button"
        android:layout_below="@+id/paid"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/clear"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/months"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
